BoxLayout:
    orientation:'vertical'
    MDTopAppBar:
        title:'Bottom ToolBar'
        md_bg_color:.2,1,.9,1

    MDBottomNavigation:
        #panel_color: "lightblue"
        selected_color_background: "green"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Mail'
            icon: 'gmail'
            badge_icon: "numeric-10"
            on_tab_press:app.gmail_icon()

            MDLabel:
                text: 'Mail'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Twitter'
            icon: 'twitter'
            badge_icon: "numeric-5"

            MDLabel:
                text: 'Twitter'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'LinkedIN'
            icon: 'linkedin'

            MDLabel:
                text: 'LinkedIN'
                halign: 'center'
